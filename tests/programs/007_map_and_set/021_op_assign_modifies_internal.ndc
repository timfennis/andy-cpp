// This test validates that using the |= operator modifies the variable in place

let x = %{
  "foo": 1,
  "bar": 2,
};

let y = x;

x |= %{"baz": 3};

assert(x == y);
assert(x.len == 3);
assert(y.len == 3);

let z = x;

z &= %{"bar": 10};

assert(x == y and y == z);
assert(x.len == 1 and y.len == 1 and z.len == 1);

